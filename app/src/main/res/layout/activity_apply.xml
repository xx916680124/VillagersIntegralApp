<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.villagers.ApplyActivity">




    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:elevation="2dp"
        android:text="姓名:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/cardView5"
        app:layout_constraintTop_toTopOf="@+id/cardView5" />
    <EditText
        android:id="@+id/et_name"
        android:background="@drawable/shape_et_noradius"
        app:layout_constraintTop_toTopOf="@id/textView7"
        app:layout_constraintBottom_toBottomOf="@id/textView7"
        app:layout_constraintStart_toEndOf="@id/textView7"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="@id/cardView5"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="5dp"
        android:elevation="2dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:elevation="2dp"
        android:text="资料:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/cardView5"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
    <EditText
        android:id="@+id/et_info"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_et_noradius"
        app:layout_constraintTop_toBottomOf="@id/textView8"
        app:layout_constraintStart_toStartOf="@id/textView8"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="@id/cardView5"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="5dp"
        android:elevation="2dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp"
        android:text="说明:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/cardView5"
        app:layout_constraintTop_toBottomOf="@+id/et_info" />
    <EditText
        android:id="@+id/et_explanation"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_et_noradius"
        app:layout_constraintTop_toBottomOf="@id/textView9"
        app:layout_constraintStart_toStartOf="@id/textView9"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="@id/cardView5"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="5dp"
        android:elevation="2dp"
        android:layout_height="100dp"/>



    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:elevation="2dp"
        android:text="申请积分:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/cardView5"
        app:layout_constraintTop_toBottomOf="@+id/et_explanation" />
    <EditText
        android:id="@+id/et_integral"
        android:background="@drawable/shape_et_noradius"
        app:layout_constraintTop_toTopOf="@id/textView10"
        app:layout_constraintBottom_toBottomOf="@id/textView10"
        app:layout_constraintStart_toEndOf="@id/textView10"
        android:layout_width="80dp"
        android:inputType="number"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="5dp"
        android:elevation="2dp"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_red"
        android:text="取消"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/cardView5"
        app:layout_constraintEnd_toStartOf="@id/btn_submit"
        app:layout_constraintTop_toBottomOf="@+id/et_integral"
        />
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn"
        android:text="返回"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/cardView5"
        app:layout_constraintStart_toEndOf="@id/btn_cancel"
        app:layout_constraintTop_toTopOf="@+id/btn_cancel"
        app:layout_constraintBottom_toBottomOf="@+id/btn_cancel"
       />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="#03A9F4"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:text="积分说明>"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="申请积分"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="60dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardView4"
        app:layout_constraintTop_toBottomOf="@+id/cardView4"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>